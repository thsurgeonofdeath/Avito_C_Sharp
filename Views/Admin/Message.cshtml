@model IEnumerable<ASP_Projet.Models.Message>

@{
    ViewBag.Title = "Message";
}
<div style=" margin-left: auto; width: 80%; margin-right: auto;">
    <div class="header" style=" display: flex; justify-content: space-between; align-items: center; ">
        <h2 style="font-weight: bold; color: rgba(144,12,63,1)">Messages</h2>
        @using (Html.BeginForm("Message", "Admin", FormMethod.Get))
        {
            @Html.TextBox("searching", "", new { style = "border-radius: 10px;padding: 3px; " }) <input type="submit" value="Chercher" class="searchButton" />
        }
    </div>

    <table class="table myTable">
        <tr class="table-header">

            <th>
                @Html.DisplayNameFor(model => model.Proprietaire.nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.msg)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Proprietaire.nom)
        </td>
        <td style="width: 60%">
            @Html.DisplayFor(modelItem => item.msg)
        </td>

        <td style="width: 10%">
            <a href="@Url.Action("DeleteMessage", "Admin", new { id = item.Id })" class="btn-edit" style="display: inline; background-color: darkred"><span class="glyphicon glyphicon-remove"></span> Supprimer</a>
        </td>
    </tr>
        }

    </table>


</div>
