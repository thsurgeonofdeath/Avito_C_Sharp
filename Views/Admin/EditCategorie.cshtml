@model ASP_Projet.Models.Categorie

@{
    ViewBag.Title = "EditCategorie";
}

<div class="createFrom">
    <h2 style="margin-top: 0;color: rgba(144,12,63,1);font-weight: bold;">Modifier Catégorie</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id_categorie)

            <div class="form-group">
                @Html.LabelFor(model => model.nom, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.nom, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nom, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="margin: 0;">
                    <input type="submit" value="Enregistrer" class="btn btn-default buttonAjouter" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Retour à la liste", "Categories")
    </div>


</div>
