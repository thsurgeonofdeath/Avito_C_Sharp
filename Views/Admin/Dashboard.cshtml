@model IEnumerable<ASP_Projet.Models.Proprietaire>

@{
    ViewBag.Title = "Index";
}



<div style=" margin-left: auto; width: 90%; margin-right: auto;">
    <div class="header" style=" display: flex; justify-content: space-between; align-items: center; ">
        <h2 style="font-weight: bold; color: rgba(144,12,63,1)">Liste des propriétaires</h2>
        @using (Html.BeginForm("Dashboard", "Admin", FormMethod.Get))
        {
            @Html.TextBox("searching", "", new { style = "border-radius: 10px;padding: 3px; " }) <input type="submit" value="Chercher" class="searchButton" />
        }
    </div>

    <table class="table myTable">
        <tr class="table-header">
            <th>
                @Html.DisplayNameFor(model => model.nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ville)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.isSpecial)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telephone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ville)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        @if (item.isSpecial == true)
        {
            <td>
                Oui
            </td>

        }
        else
        {
            <td>
                Non
            </td>
        }
    <td style="width:20%">
        <a href="@Url.Action("AddToFavoris", "Admin", new { id = item.Id_proprietaire })" class="btn-edit" style="display: inline"><span class="glyphicon glyphicon-heart"></span> Favorie</a>
        <a href="@Url.Action("AddToBlock", "Admin", new { id = item.Id_proprietaire })" class="btn-edit" style="display: inline; background: darkred"><span class="glyphicon glyphicon-remove"></span> Bloquer</a>
        <a href="@Url.Action("SetSpecial", "Admin", new { id = item.Id_proprietaire })" class="btn-edit" style="display: inline; background: dodgerblue"><span class="glyphicon glyphicon-ok"></span> Spécial</a>
    </td>
    </tr>
        }

    </table>

</div>

